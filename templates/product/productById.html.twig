{% extends "base.html.twig" %}
{% block title %} SuperMarket | Product {{ productsById.id }}{% endblock %}
{% block body %}
    <div class="flex justify-center mt-24 mb-52">
        <div
            class="flex flex-col rounded-lg bg-white shadow-lg dark:bg-neutral-700 md:max-w-xl md:flex-row">
            <img
            class="h-96 w-full rounded-t-lg object-cover md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
            src="{{ vich_uploader_asset(productsById, 'imageFile') }}"
            alt="" />
            <div class="flex flex-col justify-start p-6">
            <h5
                class="mb-2 text-xl font-medium text-neutral-800 dark:text-neutral-50">
                {{ productsById.title }}
            </h5>
            <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
                {{ productsById.description }}
            </p>
            <h3 class="text-2xl mb-6">
                <strong>$ {{ productsById.price }}</strong>
            </h3>
            <p class="text-xs text-neutral-500 dark:text-neutral-300">
                quantity: {{ productsById.quantity }}
            </p>
            </div>
        </div>
    </div>
{% endblock %}